{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./build",
    "strict": true,
    "sourceMap": true,
    "target": "es2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true
  },
  "ts-node": {
    "esm": true
  },
  "exclude": [
    "node_modules",
    "build",
    "**/*spec.ts",
    "commitlint.config.cjs",
    "cache"
  ]
}
