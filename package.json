{
  "name": "media4u",
  "author": "Iamstarcode.",
  "scripts": {
    "build": "pnpm -r build",
    "anim4u": "pnpm -F @iamstarcode/4u-lib build && pnpm -F anim4u animepahe",
    "flix": "pnpm --filter @iamstarcode/4u-lib build && pnpm i && pnpm --filter movie4u flixhq",
    "mhd": "pnpm --filter @iamstarcode/4u-lib build && pnpm --filter movie4u mhd",
    "prepare": "husky install"
  },
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "husky": "^8.0.0"
  }
}
